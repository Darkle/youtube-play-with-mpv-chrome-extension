{
  "name": "Youtube Play With MPV",
  "version": "0.0.1",
  "description": "Allows you to play youtube videos in mpv",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "nativeMessaging",
    "declarativeContent",
    "webNavigation",
    "contextMenus",
    "cookies",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://www.googleapis.com/youtube/v3/*"
  ],
  "content_security_policy": "default-src 'self' ; style-src 'unsafe-inline' ; img-src 'self' data: https://i.ytimg.com; font-src 'self' data: ; connect-src https://www.googleapis.com;",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "exclude_matches": [
        "https://www.youtube.com/embed/*"
      ],
      "js": [
        "youtube-content-script.js"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "mpv-logo-128.png"
    }
  },
  "icons": {
    "128": "mpv-logo-128.png"
  },
  "web_accessible_resources": [
    "mpv-logo-128.png"
  ],
  "manifest_version": 2
}
